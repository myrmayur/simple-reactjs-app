pipeline{

	agent   

	environment {
		DOCKERHUB_CREDENTIALS=credentials('DockerID')
	}

	stages {
	    
	    stage('gitclone') {

			steps {
				git clone 'https://github.com/myrmayur/simple-reactjs-app.git'
			}
		}

		stage('Build') {

			steps {
				sh 'docker build -t myrmayur/nodeapp_test:latest .'
			}
		}

		stage('Login') {

			steps {
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}

		stage('Push') {

			steps {
				sh 'docker push myrmayur/nodeapp_test:latest'
			}
		}
	}

	post {
		always {
			sh 'docker logout'
		}
	}

}