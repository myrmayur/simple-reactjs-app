pipeline {
    agent {
        docker {
            image 'docker:stable'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        GITHUB_CREDENTIALS_ID = 'github'         // ID of the GitHub credentials
        DOCKERHUB_CREDENTIALS_ID = 'DockerID'   // ID of the Docker Hub credentials
        DOCKERHUB_REPO = 'myrmayur/app' // Your Docker Hub repository
    }

    stages {
        stage('Checkout') {
            steps {
                git credentialsId: "${env.GITHUB_CREDENTIALS_ID}", url: 'https://github.com/myrmayur/simple-reactjs-app.git', branch: 'master'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Building the Docker image
                    dockerImage = docker.build("${env.DOCKERHUB_REPO}:${env.BUILD_ID}")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "${env.DOCKERHUB_CREDENTIALS_ID}") {
                        dockerImage.push("${env.BUILD_ID}")
                        dockerImage.push("latest")
                    }
                }
            }
        }

        stage('Clean Up') {
            steps {
                // Cleaning up local Docker images to save space
                sh "docker rmi ${env.DOCKERHUB_REPO}:${env.BUILD_ID}"
                sh "docker rmi ${env.DOCKERHUB_REPO}:latest"
            }
        }
    }

    post {
        always {
            // Cleaning the workspace after the build
            cleanWs()
        }
    }
}
