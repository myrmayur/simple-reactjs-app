pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = 'DockerID' // Use the ID of Docker Hub credentials added in Jenkins
        IMAGE_NAME = 'myrmayur/app'
        TAG = "${env.BUILD_ID}"
    }

    stages {
        stage('Build') {
            steps {
                script {
                    docker.build(imageNameWithTag())
                }
            }
        }

        stage('Test') {
            steps {
                script{
                    npm install -g create-react-app
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', DOCKER_HUB_CREDENTIALS) {
                        docker.image(imageNameWithTag()).push()
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Successfully built and pushed Docker image'
        }
    }
}

def imageNameWithTag() {
    return "${IMAGE_NAME}:${TAG}"
}
